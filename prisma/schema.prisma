// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// See for `DATABASE_URL` parameter in the environment for the sqlite file location (under the `prisma` folder).

generator client {
  provider             = "prisma-client-py"
  interface            = "sync"
  recursive_type_depth = 5
}

// provider = "sqlite" | "postgresql", see 'prisma-switch.mjs' (if provided)
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TempMessage {
  id        Int     @id @default(autoincrement())
  messageId BigInt
  commandId Int
  command   Command @relation(fields: [commandId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("TempMessages")
}

model Command {
  id        Int     @id @default(autoincrement())
  messageId BigInt
  updateId  BigInt
  userId    BigInt
  userStr   String  @default("")
  repeated  Int     @default(1)
  isActive  Boolean @default(true)

  tempMessages TempMessage[]

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@map("Commands")
}

model User {
  id       BigInt  @id @default(autoincrement())
  userStr  String  @default("")

  isActive Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  totalStats   TotalStats?
  monthlyStats MonthlyStats[]

  @@map("Users")
}

model TotalStats {
  userId BigInt
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Requests count
  requests BigInt @default(0)
  // Total downloaded volume (in KBs)
  volume   BigInt @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@unique([userId])
  @@map("TotalStats")
}

model MonthlyStats {
  userId BigInt
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  year  Int
  month Int

  // Requests count
  requests BigInt @default(0)
  // Total downloaded volume (in KBs)
  volume   BigInt @default(0)

  @@unique([userId, year, month])
  @@index([year, month])
  @@index([userId, year])
  @@index([userId])
  @@map("MonthlyStats")
}
