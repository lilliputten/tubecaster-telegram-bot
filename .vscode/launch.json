  "version": "0.2.0",
  "configurations": [
    {
      "name": "Poetry flask server",
      "type": "debugpy",
      "request": "launch",
      "module": "poetry",
      "env": {
        // NOTE: Default options are parsed from `.flaskenv` file
        // "FLASK_APP": "src/server.py:app",
        // "FLASK_ENV": "development",
        // "FLASK_DEBUG": "0",
      },
      "args": [
        "run",
        "flask",
        "--app",
        "api",
        "--debug",
        "run",
        //  "--no-debugger",
      ],
      "jinja": true
    },
    {
      "name": "Flask server",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        // NOTE: Default options are parsed from `.flaskenv` file
        // "FLASK_APP": "src/server.py:app",
        // "FLASK_ENV": "development",
        // "FLASK_DEBUG": "0",
      },
      "args": [
        "--app",
        "api",
        "--debug",
        "run",
        //  "--no-debugger",
      ],
      "jinja": true
    },
    {
      "name": "All python tests",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "args": [
        "discover", // Find all test modules
        "-f", // Stop on first fail
        "-t",
        ".", // Root project path
        "-s",
        "src", // Search in path
        "-p",
        "*_test.py", // Search pattern
      ],
    },
    {
      "name": "One python test",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "args": [
        "-f", // Stop on first fail
        // Specify python module path below...
        // "src/core/Questions/Questions_test.py",
        // "src/core/lib/gameUtils_test.py",
        // "src/core/Questions/Questions_test.py",
        "src/core/lib/gameHelpers_test.py",
        // "-k", // Specify test match string below...
        // "test_getGameRecordRatioTag_dateAffect"
      ],
    },
    {
      "name": "Poetry: Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "poetry",
      // "program": "${file}",
      "args": [
        "run",
        "python",
        "${file}",
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Module",
      "type": "debugpy",
      "request": "launch",
      "module": "enter-your-module-name"
    },
  ]
}
